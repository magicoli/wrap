#!/bin/bash

PGM=$(basename $0)
TMP=/tmp/$PGM.$$

if [ "$1" == "--large" ]
	then
	dest=../mp4-hd
	method=$2
else
	dest=../mp4
	method=$1
fi

[ ! -d "$dest" ] && echo "$dest missing" && exit 1
[ ! -d "../web" ] && echo "../web missing" && exit 2

while true
do
	# scratchmove --mp4 ./ $dest/
	batchff liste
	batchthumbs liste $method > $TMP.playlist
	mv $TMP.playlist ../web/playlist.php

	# batchturbo liste
	# batchthumbs liste > playlist.php
	# batchsync -nt -nv
	echo
	read -t 10
done
