#!/bin/sh

#[ "$1" ] || exit 1
#[ -f "$1" ] || exit 2

PGM=`basename "$0"`
PATH="$PATH:"$(dirname "$0")
TMP="/tmp/$PGM"

ls casting*/playlist.php 2>/dev/null || exit 1

grep "//" casting*/playlist.php | sed "s|.*//[[:blank:]]*||" | sort -u | while read roles
do
	echo "$roles" | sed -E "s#[[:blank:]]*(//*|,)[[:blank:]]*#\n#g" | grep . | while read role
	do
		printf "$role\t"
		folder=$(echo "$role" | webnormalize)
		mkdir -p "$folder"
		(
		echo "<?php"
		echo "\$customnames=array("
		grep -H "//[[:blank:]]*$role[[:blank:]]*$" casting*/playlist.php \
		| sed "s|^[[:blank:]]*\(.*\)/playlist.php:[[:blank:]]*\"| \"../\\1/|" \
		| sed "s|<span class=info>[^<]*</span>||"
		echo ");"
		echo "?>"
		) > "$folder/playlist.php"
		cat "$folder/playlist.php" | grep "=>" | wc -l
	done
done
echo

