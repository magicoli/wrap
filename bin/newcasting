#!/bin/sh

# base=/Volumes/Castagne
# base=/Volumes/MagiiicMobile
base=/Volumes/Archaos

PGM=`basename "$0"`
TMP="/tmp/$PGM"

for conf in /etc/$PGM /usr/local/etc/$PGM ~/etc/$PGM
do
    [ -f $conf ] && . $conf
done

echo "base: $base"

printf "Client:"

if [ $1 ]
	then
	client=$1
else
	printf "\n"
	ls -d "$base"/*/*/casting* 2>/dev/null \
	    | cut -d "/" -f 4 | sort -u > "$TMP.clients"
	cat -n "$TMP.clients"
	while [ ! "$client" ]
	do
		read -p "Choose client: " client
		[ ! $client ] && continue
		
		if [ "$client" = "`echo "$client" | grep -v "[^0-9]"`" ]
			then
			client=`head -$client "$TMP.clients" | tail -1`
		fi
	done
fi

printf "\t$client\n"

if [ ! -d "$base/$client" ]
	then
	printf "\t"
	read -p "client $client does not exist, create it? [y/N] " create
	if [ "$create" != "y" ] 
		then
		echo "cancelled"
		exit
	fi
	mkdir "$base/$client" || exit 1
	printf "\tcreated\n"
fi

printf "Job:"

if [ $2 ]
	then
	job=$2
else
	printf "\n"
	ls -d "$base/$client"/*/casting* 2>/dev/null \
	    | cut -d "/" -f 5 | sort -u > "$TMP.jobs"
	cat -n "$TMP.jobs"
	while [ ! "$job" ]
	do
		read -p "Choose job: " job
		[ ! $job ] && continue

		if [ "$job" = "`echo "$job" | grep -v "[^0-9]"`" ]
			then
			job=`head -$job "$TMP.jobs" | tail -1`
		fi
	done
fi

printf "\t$job\n"

if [ ! -d "$base/$client/$job" ]
	then
	printf "\t"
	read -p "job $job does not exist, create it? [y/N] " create
	if [ "$create" != "y" ] 
		then
		echo "cancelled"
		exit
	fi
	mkdir "$base/$client/$job" || exit 2
	printf "\tcreated\n"
fi

printf "Castings:\n"

ls -d "$base/$client/$job"/casting* 2>/dev/null \
    | sed "s|$base/$client/$job/||" \
    | sed "s/\..*//" | sort -u > "$TMP.castings"

cat -n "$TMP.castings"

newnumber=$((`cat "$TMP.castings" | wc -l` + 1))
casting="casting$newnumber"

printf "\t"
read -p "create \"$casting\" ? [y/N] " create

if [ "$create" != "y" ] 
	then
	echo "cancelled"
	unset job
	exit
fi

initialdir="$PWD"

for folder in \
	"$base/$client/$job/$casting" \
 	"$base/$client/$job/$casting/sources" \
	"$base/$client/$job/$casting/dv" \
	"$base/$client/$job/$casting/mp4" \
	"$base/$client/$job/$casting/mp4-hd" \
	"$base/$client/web" \
	"$base/$client/web/$job" \
	"$base/$client/web/$job/$casting" \
	"$base/$client/web/$job/$casting/.browsercache"
do
	if [ -d "$folder" ]
		then
		printf "\t $folder\n"
	else
		mkdir "$folder" || exit 4
		printf "created\t$folder\n"
	fi
done
cd "$base/$client/$job/$casting" || exit 5
ln -s "$base/$client/web/$job/$casting" web || exit 6
cd "$base/$client/$job/$casting/dv" || exit 7
ln -s "$base/$client/web/$job/$casting/.browsercache" || exit 8

echo "Done"
echo "$base/$client/$job/$casting"
