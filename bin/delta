#!/bin/sh

PGM=`basename "$0"`
TMP="/tmp/$PGM"

ls -rt Clip* clip* 2>/dev/null | while read file
do
	echo "$file"
	ln -s "$file" "$TMP.mov"
	GetFileInfo "$file" > "$TMP.fileinfo" 
	created=`grep "created" "$TMP.fileinfo" | cut -d " " -f 2-`
	modifield=`grep "modified" "$TMP.fileinfo" | cut -d " " -f 2-`
	duration=`qt_info "$TMP.mov" | grep "movie duration"` cut -d ":" -f 2
	printf "\t$created\n"
	printf "\t$modified\n"
	printf "\t$duration\n"
	rm "$TMP.mov"
done
