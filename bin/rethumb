#!/bin/bash

[ "$1" ] && standard="$1"
group=5

cat liste | grep -i [a-z] | while read nr foo
do
    grep -q "^$nr.mov" .rethumbed 2>/dev/null && echo "$nr already seen" && continue
    grep "^$nr.mov" times | while read f f duration
    do
	echo "$foo" | grep -q "," \
	    && d=$group \
	    || {
	    [ "$standard" ] && d=$standard || d=$(($duration));
	}
	qt-thumbnailswide.sh -f -l -$d $nr.mov \
	    && echo  "$nr.mov" >> .rethumbed
    done
done
