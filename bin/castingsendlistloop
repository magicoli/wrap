#!/bin/bash

export PATH=$PATH:$(dirname $0)
. $(which casting-helpers) || exit 1

pwd | egrep -q "^$localdir.*casting[0-9]*$" || end 1 "Ce n'est pas un dossier de casting"

castingdir=$client/$job/$casting
echo "client: $client"
echo "job: $job"
echo "casting: $casting"
echo "remote: $remote"

while true
do
	rsync -Wavz liste ignore thumbs $remote/$castingdir/sources/ \
		| egrep "^liste$|ignore|thumbs" | sed "s/$/ $(date)/"
	read -t 17
done

end $?
