#!/bin/sh

total=30

for movie in $@
do
	printf "$movie: "
	duration=$(ffmpeg -i "$movie" 2>&1 | grep Duration: | sed "s/.*Duration: //" | cut -d "," -f 1 | cut -d "." -f 1)
	printf "$duration "
	seconds=$(($(date -d "1970-01-01 $duration" +%s) + 3600))
	printf "$seconds "
	total=$(($total + $seconds))
	echo
done

echo total: $total

minutes=$(($total / 60))
echo minutes: $minutes
