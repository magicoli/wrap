{
    "name": "magicoli/wrap",
    "description": "W.R.A.P. by Magiiic",
    "type": "library",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Olivier van Helden",
            "homepage": "https://magiiic.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Wrap\\": "engine/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wrap\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform-check": false
    },
    "scripts": {
        "post-install-cmd": [
            "[ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility",
            "@composer install --working-dir=engine",
            "@composer install --working-dir=cli"
        ],
        "post-update-cmd": [
            "[ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths vendor/phpcompatibility/php-compatibility",
            "@composer update --working-dir=engine",
            "@composer update --working-dir=cli"
        ],
        "bump-version": "vendor/magicoli/php-bump-library/vendor/bin/robo --load-from=vendor/magicoli/php-bump-library/RoboFile.php bump:version",
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=1",
        "cs-fix": "php-cs-fixer fix"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "magicoli/php-bump-library": "^1.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "humbug/box": "^4.5"
    }
}
